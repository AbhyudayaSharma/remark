{
  "name": "remark.com",
  "private": true,
  "version": "0.0.0",
  "description": "The remark.com website",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "dependencies": {},
  "devDependencies": {
    "cssnano": "^3.10.0",
    "postcss-cli": "^4.1.0",
    "rehype-cli": "^3.0.0",
    "rehype-highlight": "^2.0.0",
    "rehype-preset-minify": "^2.0.0",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "xo": "^0.18.2"
  },
  "scripts": {
    "build:mv": "cp -r src/* dest",
    "build:html": "rehype -u highlight -u preset-minify src -o dest",
    "build:css": "postcss src/index.css > dest/index.css",
    "build": "npm run build:mv && npm run build:css && npm run build:html",
    "lint": "xo && stylelint index.css",
    "test": "npm run build && npm run lint"
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  },
  "xo": {
    "space": true,
    "esnext": false
  },
  "postcss": {
    "plugins": {
      "cssnano": {
        "preset": "default"
      }
    }
  }
}
